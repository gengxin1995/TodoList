.container {
  display: flex;
  flex-direction: column;
  min-height: 1070rpx;
  background-color: #eee;
  padding: 10px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 710rpx;
  background-color: #fff;
  border-radius: 10px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #666;
  margin-bottom: 10px;
}

.cates-container {
  margin-top: 10px;
  background-color: #fff;
  width: 710rpx;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  padding: 10px;
  box-sizing: border-box;
}

.cates {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;  
  margin-top: 10px;
  color: #333;
  font-size: 16px;
}

.cate {
  height: 44px;
  padding: 10px;
  border: 1px solid #333;
  margin-right: 10px;
  border-radius: 20px;
  box-sizing: border-box;
  display: flex;
  flex-shrink: 0;
  margin-bottom: 10px;
}

.add {
  width: 44px;
  height: 44px;
  border: 1px solid #333;
  border-radius: 22px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-bottom: 10px;
}

.add image {
  width: 24px;
  height: 24px;
}