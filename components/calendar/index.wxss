.container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
  padding: 0 10px 10px 10px;
}
.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 50px;
}
.prev, .next {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 50px;
  height: 50px;
}
.weeks {
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.week {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dates {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.day {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.todo {
  width: 8px;
  height: 8px;
  border-radius: 4px;
  background-color: #ccc;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -4px;
}
